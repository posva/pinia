{
  "compilerOptions": {
    "allowJs": true,
    "target": "esnext",
    "module": "esnext",
    "noEmit": true,
    "strict": true,
    "noImplicitThis": true,
    "composite": true,
    "esModuleInterop": true,
    "moduleResolution": "node",

    "rootDir": ".",
    "baseUrl": "."
  },
  "include": ["src/**/*.ts", "nuxt/*.js", "__tests__/**/*.ts", "nuxt/*.d.ts'"]
}
